<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/id_tab_home_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:src="@drawable/home_normal"
            android:background="@color/touming"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/id_tab_check_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:src="@drawable/check_normal"
            android:background="@color/touming"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_standard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/id_tab_standard_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_gravity="center"
            android:src="@drawable/standard_normal"
            android:background="@color/touming"/>
    </LinearLayout>




</LinearLayout>
